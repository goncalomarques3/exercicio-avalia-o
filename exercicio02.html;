

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
</head>
<body>

<script>
    function calcularValor(preco, desconto) {

        if (desconto === 0) {
            return preco * 2;
        }

        if (desconto < 10) {
            return preco + (preco * desconto / 100);
        }

        if (desconto > 10 && desconto < 30) {
            return preco - (preco * desconto / 100);
        }
    }

    console.log(calcularValor(100, 5));
    console.log(calcularValor(100, 20));
    console.log(calcularValor(100, 0));
</script>

</body>
</html>

