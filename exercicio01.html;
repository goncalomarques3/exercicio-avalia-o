<script>
   
    let paises = [
        'Albânia',
        'Bolívia',
        'Canadá',
        'Dinamarca',
        'Etiópia',
        'Finlândia',
        'Alemanha',
        'Hungria',
        'Irlanda',
        'Japão',
        'Quênia'
    ];

    
    for (let i = 0; i < paises.length; i++) {
        console.log(paises[i]);
    }

    
    function numeroDePaises() {
        return paises.length;
    }

    console.log("Número de países:", numeroDePaises());

  
    paises.unshift('Portugal');

   
    paises.push('Espanha');

   
    function mostrarUltimosTres() {
        console.log(paises.slice(-3));
    }

    mostrarUltimosTres();


    console.log(paises.join(' - '));
</script>

